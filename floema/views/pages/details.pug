extends ../base.pug

block variables
  - var template = 'details'

block content
  .detail
    .detail_wrapper
      figure.detail_media
        img.details_media_image(alt=product.data.image.alt src=product.data.image.url)
    .detail_information
      p.detail_information_collection=product.data.collections.data.title
      h1.details_information_title=product.data.title
      .detail_information_content
        .detail_information_highlights
          each highlight in product.data.hightlight
            svg.details_information_highlight_icon
              use(xlink:href=`sprite-${highlight.highlight_icon.toLowerCase()}`)
            span.detail_information_item_=highlight.highlights_text
        .details_information_list
          each item in product.data.information
            p.details_information_item
              strong.details_information_item_title=item.information_label
              span.detail_information_item_description=item.information_description
